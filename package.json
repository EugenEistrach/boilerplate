{
  "name": "perfux-boilerplate",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx --conditions=react-server server.ts",
    "build": "next build",
    "start": "NODE_ENV=production tsx --conditions=react-server server.ts",
    "lint": "next lint",
    "db:push": "NODE_OPTIONS='--conditions=react-server' drizzle-kit push --config=drizzle.config.ts",
    "db:migrate": "tsx --conditions=react-server ./src/db/migrate.ts",
    "db:generate": "NODE_OPTIONS='--conditions=react-server' drizzle-kit generate --config=drizzle.config.ts",
    "db:studio": "NODE_OPTIONS='--conditions=react-server' drizzle-kit studio",
    "db:clear": "tsx --conditions=react-server ./src/db/clear.ts",
    "db:seed": "tsx --conditions=react-server ./src/db/seed.ts",
    "db:reset": "npm run db:clear && npm run db:migrate && npm run db:seed",
    "pull-boilerplate": "git fetch boilerplate && git checkout -b update-boilerplate && git merge boilerplate/main --allow-unrelated-histories"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@next-safe-action/adapter-react-hook-form": "^1.0.13",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@sentry/nextjs": "^8.30.0",
    "@t3-oss/env-nextjs": "^0.11.1",
    "babel-plugin-react-compiler": "0.0.0-experimental-de2cfda-20240912",
    "better-sqlite3": "^11.3.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "express": "^4.21.0",
    "lucide-react": "^0.441.0",
    "next": "15.0.0-canary.156",
    "next-auth": "5.0.0-beta.20",
    "next-safe-action": "^7.9.3",
    "next-themes": "^0.3.0",
    "node-cron": "^3.0.3",
    "nuqs": "^1.19.1",
    "react": "19.0.0-rc-206df66e-20240912",
    "react-dom": "19.0.0-rc-206df66e-20240912",
    "react-hook-form": "^7.53.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.19.1",
    "typescript": "5.6.2",
    "zod": "^3.23.8",
    "zod-form-data": "^2.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/express": "^4.17.21",
    "@types/node": "^22",
    "@types/node-cron": "^3.0.11",
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc",
    "drizzle-kit": "^0.24.2",
    "postcss": "^8",
    "tailwindcss": "^3.4.11"
  },
  "overrides": {
    "@types/react": "npm:types-react@rc",
    "@types/react-dom": "npm:types-react-dom@rc"
  },
  "packageManager": "pnpm@9.10.0",
  "engines": {
    "node": "20.x"
  }
}
